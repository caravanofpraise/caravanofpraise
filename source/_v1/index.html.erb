    <!-- ******************** MASTHEAD SECTION ******************** -->
    <main class="masthead screen" id="top" role="main">
      <div class="container">
        <div class="row">
          <div class="large-12 columns">
            <div class="masthead-logo">
              <img alt="logo" src="<%= imgurl("logo.png") %>">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="large-4 medium-6 small-8 small-centered columns">
            <div class="bigtext">
              <h1 class="wow fade-in-down" data-wow-delay="0s">Come Join</h1>
              <h2>The Caravan!</h2>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <div class="social">
              <a href="http://facebook.com/caravanofpraise"><img src="<%= imgurl("social/facebook-a.svg") %>" alt=""></a>
              <a href="https://www.youtube.com/channel/UCHCtQz9Y1gbzbmUwMwNNjhg"><img src="<%= imgurl("social/youtube-a.svg") %>" alt=""></a>
              <a href="http://instagram.com/caravanofpraise"><img src="<%= imgurl("social/instagram-a.svg") %>" alt=""></a>
              <a href="http://inteammobile.com/v2"><img src="<%= imgurl("cart.svg") %>" alt=""></a>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- ******************** LYRICS ******************** -->
